<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
  xmlns:gap   = "http://phonegap.com/ns/1.0"
  id          = "com.team.apparel" 
  versionCode = "10"
  version     = "1.1.2" >
  
  <!-- versionCode is optional and Android only -->
  
  <name>Apparel</name>
  <platform name="android">
    <icon src="res/images/icon/ldpi.png" density="ldpi"/>
    <icon src="res/images/icon/mdpi.png" density="mdpi"/>
  </platform>

  <preference name="orientation" value="portrait" />
  <preference name="fullscreen" value="true" />
  <preference name="KeepRunning" value="false"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="android-build-tool" value="gradle" />  
  
  <plugin name="cordova-plugin-splashscreen" source="npm" />

  <splash src="res/images/splash/ldpi.png" platform="android" qualifier="ldpi"/>
  <splash src="res/images/splash/mdpi.png" platform="android" qualifier="mdpi"/>

  <plugin name="cordova-plugin-inappbrowser"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>

  <access origin="*"/>
  <allow-intent href="https://*/*"/>
  <allow-navigation href="https://*/*"/>
  
  <description>
    Apparel-Aplikasi Pemesanan Baju Online
  </description>
  
  <author href="https://www.apparel.com" email="teamapparel@gmail.com">
    Apparel Team
  </author>
  
</widget>